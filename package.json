{
  "name": "helium-bin",
  "module": "index.ts",
  "description": "Automated AUR publishing for Helium browser :3",
  "type": "module",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./output && rm -rf ./downloads && rm -rf ./aur-work",
    "generate": "bun run scripts/gen-pkgbuild.ts",
    "checksums": "bun run scripts/update-checksums.ts",
    "publish": "bun run scripts/publish-aur.ts",
    "all": "bun run clean && bun run generate && bun run checksums && bun run publish"
  },
  "dependencies": {
    "@types/node": "^20.10.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}